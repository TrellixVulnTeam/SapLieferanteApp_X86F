<mvc:View
	controllerName="com.uniq.suppliers.controller.Master"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<!--showFooter="false" versteck der Footer-->
	<f:DynamicPage id="dynamicPageId" showFooter="false">
		<!-- DynamicPage Title -->

		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>headingMasterTilte}"/>
				</f:heading>
			</f:DynamicPageTitle>

		</f:title>

		<!-- DynamicPage Content -->
		<f:content>
			<VBox fitContainer="true">
				<OverflowToolbar class="sapFDynamicPageAlignContent">
					<ToolbarSpacer/>
					<SearchField search="onSearch" width="17.5rem"/>
					<OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
				</OverflowToolbar>
				<Table
					id="suppliersTable"
					mode ="SingleSelectMaster"
					itemPress="onListItemPress"
					updateFinished="updateTableFinished"
					items="{
						path: '/Suppliers',
						sorter: {
							path: 'SupplierID',
							descending: false
						},
						parameters: {

							expand: 'Products'

						}
					}"
					class="sapFDynamicPageAlignContent"
					width="auto">
					<columns >
						<Column width="12em">
							<Text text="{i18n>masterTableColumnName1}"/>
						</Column>
						<Column hAlign="Center">
							<Text text="{i18n>masterTableColumnName3}"/>
						</Column>
						<Column	hAlign="End">
							<Text text="{i18n>masterTableColumnName2}"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation">
							<cells>
								<ObjectIdentifier title="{CompanyName}" />
								<ObjectIdentifier title="{City}" />
								<ObjectNumber
								number="{= ${Products}.length}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		</f:content>

		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="{i18n>floatButtonMaster1}"/>
				<Button type="Reject" text="{i18n>floatButtonMaster2}"/>
			</OverflowToolbar>
		</f:footer>
	</f:DynamicPage>
</mvc:View>
